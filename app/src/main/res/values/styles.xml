<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/PopupTheme</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="android:Widget.Material.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Button.Negative">
        <item name="android:textColor">@color/colorNegative</item>
        <item name="android:background">@drawable/btn_negative</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Positive">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_positive</item>
    </style>

    <style name="Button.Neutral">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/btn_neutral</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
